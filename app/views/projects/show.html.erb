<div class="project-intro">
	<div class="container">

		<div class="row">
			<div class="col-md-12 text-center">
				<h2 class="project-tittle"><%= @project.name %> </h2>
			</div>
		</div>

		<div class="row">
			<div class="col-md-8">
				<%= link_to image_tag(@project.image_url, alt: @project.name, width: '100%'), project_path(@project) %> 
			</div>
			<div class="col-md-4">
				<div class="project-mgmt">
					<%= link_to 'Edit', edit_project_path(@project) %> 
					<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you shure? "} %> 
				</div>
					<%= render 'stats' %> 
					<%= link_to 'See project backers', "#", class: "btn btn-success btn-lg" %> 
					<br>
					<br>
					<%= link_to 'Back this project', new_project_pledge_path(@project), class: "btn btn-success btn-lg" %> 
					<p class="project-time"><%= time_ago_in_words(@project.created_at) %></p>
			</div>
		</div>

		<div class="row">
			<div class="col-md-8">
				<p class="project-small-description"> Project small description</p>
			</div>
		</div>

	</div>
</div>

<div class="container">
	
	<div class="row">
		<div class="col-md-8">
			<h3 class="project-subtitle">Rewards</h3>
			<p><%= @project.description %> </p>
		</div>
		<div class="col-md-4">
			<p><%= render @rewards %></p>
			<%= link_to "Add reward", new_project_reward_path(@project), class: "btn btn-primary" %> 
		</div>
	</div>

</div>